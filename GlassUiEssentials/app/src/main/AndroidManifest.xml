<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ocddevelopers.androidwearables.glassuiessentials">

    <uses-permission
        android:name="com.google.android.glass.permission.DEVELOPMENT" />

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher">

        <activity
            android:name=".CardListActivity"
            android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/card_list_trigger" />
        </activity>

        <service android:name=".PomodoroServiceLowFreq"
                 android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/pomodoro_lowfreq_trigger" />
        </service>

        <activity android:name=".LowFreqPomodoroMenuActivity" />

        <service android:name=".PomodoroServiceHighFreq"
                 android:icon="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/pomodoro_highfreq_trigger" />
        </service>

        <activity android:name=".HighFreqPomodoroMenuActivity" />

    </application>

</manifest>
